<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black_Shade_1">
    <TextView android:layout_width="match_parent" android:layout_height="100dp" android:id="@+id/idTVPrimary"
              android:background="@color/black_Shade_1" android:gravity="bottom" android:maxLines="1"
              android:padding="10dp" android:paddingTop="20dp" android:text="" android:textSize="15sp"
              android:textAlignment="viewEnd" android:textColor="@color/white" tools:ignore="RTlCompat"/>

    <TextView android:layout_width="match_parent" android:layout_height="70dp" android:id="@+id/idTVSecondary"
              android:background="@color/black_Shade_1" android:gravity="bottom" android:maxLines="1"
              android:padding="12dp" android:text="" android:textSize="40sp"
              android:textAlignment="viewEnd" android:textColor="@color/white" tools:ignore="RtlCompat"/>
    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="555dp"
                                       android:layout_below="@id/idTVPrimary" android:background="@color/black_Shade_3"
                                       app:cardBackgroundColor="@color/black_Shade_3" app:cardCornerRadius="4dp"
                                       app:cardElevation="2dp" android:layout_marginTop="70dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical"
                      android:weightSum="7" android:background="@color/black_Shade_3">
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="4">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:layout_weight="1" android:id="@+id/idBtnBrac1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="("
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnBrac2" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text=")"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnC" android:layout_weight="1" android:textAllCaps="false"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="DEL"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnAC"
                        android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="AC"
                        android:textSize="20dp" android:textColor="@color/yellow"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="5">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnsin"
                        android:textAllCaps="false" android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="sin"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtncos" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="cos"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:layout_weight="1" android:id="@+id/idBtntan"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="tan"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtnlog" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="log"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtnln" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="ln"
                        android:textSize="20dp" android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="5">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnsqrt"
                        android:textAllCaps="false" android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="√"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtnsqr" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="x^​2"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:layout_weight="1" android:id="@+id/idBtnrem"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="Rem"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtnrecip" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text=" x−1"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:textAllCaps="false" android:id="@+id/idBtndiv" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="÷"
                        android:textSize="25dp" android:textColor="@color/white"/>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="4">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnone"
                        android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="1"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtntwo" android:layout_weight="1" android:textAllCaps="false"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="2"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:layout_weight="1" android:id="@+id/idBtnthree"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="3"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnmult" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="x"
                        android:textSize="20dp" android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="4">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnfour"
                        android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="4"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnfive" android:layout_weight="1" android:textAllCaps="false"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="5"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:layout_weight="1" android:id="@+id/idBtnsix"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="6"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnadd" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="+"
                        android:textSize="25dp" android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="4">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnseven"
                        android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="7"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtneight" android:layout_weight="1" android:textAllCaps="false"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="8"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:layout_weight="1" android:id="@+id/idBtnnine"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="9"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnsub" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="-"
                        android:textSize="25dp" android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="1mm"
                          android:orientation="horizontal" android:layout_weight="1" android:weightSum="4">
                <Button android:layout_width="0dp" android:layout_height="79dp" android:id="@+id/idBtnpi"
                        android:layout_margin="3dp" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="π"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnzero" android:layout_weight="1" android:textAllCaps="false"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="0"
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:layout_weight="1" android:id="@+id/idBtndot"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="."
                        android:textSize="20dp" android:textColor="@color/white"/>
                <Button android:layout_width="0dp" android:layout_height="79dp" android:layout_margin="3dp"
                        android:id="@+id/idBtnequals" android:layout_weight="1"
                        android:backgroundTint="@color/black_Shade_3" android:padding="6dp" android:text="="
                        android:textSize="25dp" android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>